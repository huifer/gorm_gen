<idea-plugin>
  <id>gorm-plugin</id>
  <name>gorm-gen</name>
  <vendor email="huifer97@163.com" url="https://github.com/huifer">HuiFer</vendor>

  <description><![CDATA[
        gorm generator. open help -> gorm-gen
    ]]></description>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.java</depends>
  <depends>com.intellij.modules.ultimate</depends>
  <depends>com.intellij.modules.idea</depends>
  <depends>com.intellij.modules.all</depends>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <actions>
    <action id="A" class="com.github.huifer.plugin.gui.GormGen" text="gorm-generator" description="gorm-generator">
      <add-to-group group-id="HelpMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>